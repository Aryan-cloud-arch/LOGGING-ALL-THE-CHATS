# ========================================
# Telegram Mirror Bot - Environment Configuration
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ========================================

# ========================================
# TELEGRAM CONFIGURATION
# ========================================

# Telegram API Credentials (from https://my.telegram.org/apps)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# Bot Tokens (from @BotFather)
TELEGRAM_YOUR_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_HER_BOT_TOKEN=987654321:ZYXwvuTSRqponMLKjihGFEdcba

# Bot Display Names
TELEGRAM_YOUR_BOT_NAME=YourBot
TELEGRAM_HER_BOT_NAME=HerBot

# Your Account
TELEGRAM_YOUR_PHONE=+1234567890
TELEGRAM_YOUR_NAME=You

# Her Account
TELEGRAM_HER_USER_ID=123456789
TELEGRAM_HER_NAME=Her

# Backup Group
TELEGRAM_GROUP_ID=-100123456789


# ========================================
# MONGODB CONFIGURATION
# ========================================

# Connection Details
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=telegram_mirror

# Authentication (optional)
# MONGODB_USERNAME=admin
# MONGODB_PASSWORD=your_secure_password
# MONGODB_AUTH_SOURCE=admin

# Advanced Options
# MONGODB_REPLICA_SET=rs0
# MONGODB_TLS=false
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2


# ========================================
# PERFORMANCE SETTINGS
# ========================================

# Rate Limiting
PERFORMANCE_RATE_LIMIT_MESSAGES=30
PERFORMANCE_RATE_LIMIT_MEDIA=10
PERFORMANCE_RATE_LIMIT_BURST=50

# Batch Processing
PERFORMANCE_BATCH_SIZE=25
PERFORMANCE_BATCH_DELAY=0.5

# Timeouts (seconds)
PERFORMANCE_CONNECTION_TIMEOUT=30
PERFORMANCE_REQUEST_TIMEOUT=60

# Memory Management (MB)
PERFORMANCE_MAX_MEMORY_MB=500
PERFORMANCE_CACHE_SIZE_MB=50
PERFORMANCE_CACHE_TTL=300

# Threading
PERFORMANCE_WORKER_THREADS=4
PERFORMANCE_ASYNC_WORKERS=10


# ========================================
# MEDIA SETTINGS
# ========================================

# Directories
MEDIA_TEMP_DIR=temp
MEDIA_MEDIA_DIR=media

# Size Limits (MB)
MEDIA_MAX_PHOTO_SIZE_MB=10
MEDIA_MAX_VIDEO_SIZE_MB=2000
MEDIA_MAX_DOCUMENT_SIZE_MB=2000

# Optimization
MEDIA_OPTIMIZE_PHOTOS=true
MEDIA_COMPRESS_VIDEOS=false

# Photo Settings
MEDIA_PHOTO_QUALITY=85
MEDIA_PHOTO_MAX_WIDTH=1920
MEDIA_PHOTO_MAX_HEIGHT=1080

# Video Settings
MEDIA_VIDEO_CRF=23
MEDIA_VIDEO_MAX_WIDTH=1280
MEDIA_VIDEO_PRESET=medium

# Thumbnails
MEDIA_GENERATE_THUMBNAILS=true
MEDIA_THUMBNAIL_WIDTH=320
MEDIA_THUMBNAIL_HEIGHT=320


# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log Levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL=INFO
LOGGING_CONSOLE_LEVEL=INFO
LOGGING_FILE_LEVEL=DEBUG

# Console Output
LOGGING_USE_COLORS=true
LOGGING_USE_EMOJIS=true

# File Logging
LOGGING_LOG_TO_FILE=true
LOGGING_LOG_DIR=logs
LOGGING_LOG_FILE=bot.log

# Rotation
LOGGING_MAX_BYTES=10485760
LOGGING_BACKUP_COUNT=5

# Format
LOGGING_USE_JSON=false
LOGGING_INCLUDE_TRACEBACK=true


# ========================================
# SECURITY SETTINGS
# ========================================

# Encryption
SECURITY_ENCRYPT_CREDENTIALS=true
# SECURITY_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Session
SECURITY_SESSION_TIMEOUT=86400
SECURITY_MAX_SESSIONS=5

# Validation
SECURITY_VALIDATE_IDS=true
SECURITY_VALIDATE_MEDIA=true

# Backup
SECURITY_BACKUP_ENABLED=true
SECURITY_BACKUP_INTERVAL=3600
SECURITY_BACKUP_COUNT=10


# ========================================
# MONITORING & STATISTICS
# ========================================

# Statistics
MONITORING_ENABLE_STATS=true
MONITORING_STATS_INTERVAL=60

# Health Checks
MONITORING_HEALTH_CHECK_INTERVAL=300
MONITORING_HEALTH_CHECK_TIMEOUT=10

# Alerts
MONITORING_ENABLE_ALERTS=true
MONITORING_ALERT_ON_ERROR=true
MONITORING_ALERT_ON_MEMORY=true
MONITORING_MEMORY_THRESHOLD_MB=400

# Metrics Tracking
MONITORING_TRACK_PERFORMANCE=true
MONITORING_TRACK_MESSAGES=true
MONITORING_TRACK_MEDIA=true


# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment (development, production, testing, staging)
ENVIRONMENT=production

# Debug Mode
DEBUG=false

# Application Version
VERSION=1.0.0


# ========================================
# OPTIONAL ADVANCED SETTINGS
# ========================================

# Proxy Settings (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# SOCKS_PROXY=socks5://proxy.example.com:1080

# Custom Session Directory
# SESSION_DIR=sessions

# Data Retention (days)
# DATA_RETENTION_DAYS=90

# Auto Cleanup
# AUTO_CLEANUP_ENABLED=true
# AUTO_CLEANUP_INTERVAL=86400

# Webhook Settings (if using webhooks)
# WEBHOOK_ENABLED=false
# WEBHOOK_HOST=0.0.0.0
# WEBHOOK_PORT=8443
# WEBHOOK_URL=https://your-domain.com

# API Server (for status/control)
# API_ENABLED=false
# API_HOST=127.0.0.1
# API_PORT=8080
# API_SECRET=your-api-secret


# ========================================
# NOTES
# ========================================
#
# 1. Never commit .env to version control
# 2. Keep your tokens and passwords secure
# 3. Use strong, unique passwords
# 4. Regularly rotate credentials
# 5. Monitor logs for suspicious activity
#
# For help and documentation:
# https://github.com/yourusername/telegram-mirror
#
# ========================================
